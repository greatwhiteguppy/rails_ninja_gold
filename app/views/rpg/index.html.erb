<div id="activities">
<% if session[:activities] %>
    <% session[:activities].reverse.each do |activity| %>
    <% if activity.include?("lost") %>
        <p class="red"><%= activity %></p>
    <% else %>
    <p class="green"><%= activity %></p>
    <% end %>
<% end %>
<% end %>
